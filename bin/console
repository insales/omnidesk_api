#!/usr/bin/env ruby

require 'bundler/setup'
require 'ap'
require 'pry'

require 'dotenv'
Dotenv.load

require 'omnidesk_api'

if ENV['OMNIDESK_API_LOG']
  require 'logger'
  OmnideskApi.configure do |config|
    logger = Logger.new(ENV['OMNIDESK_API_LOG'])
    config.middleware.response :logger, logger, bodies: true
  end
end

require 'irb'
IRB.start
