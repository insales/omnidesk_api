#!/usr/bin/env ruby

require 'bundler/setup'
require 'ap'
require 'pry'

require 'dotenv'
Dotenv.load

require 'omnidesk_api'

if (log_path = ENV['OMNIDESK_API_LOG'])
  require 'logger'
  logger = Logger.new(log_path)
  OmnideskApi.middleware.response :logger, logger, bodies: true
end

require 'irb'
IRB.start
